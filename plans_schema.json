{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array", "items": {"$ref": "#/definitions/plan"},
    "definitions": {
        "plan": {
            "properties": {
                "plan_id_type": {"type": "string", "enum": ["HIOS-PLAN-ID"]},
                "plan_id": {"type": "string", "pattern": "^[0-9]{5}[A-Z]{2}[0-9]{7}$"},
                "marketing_name": {"type": "string"},
                "summary_url": {"type": "string"},
                "marketing_url": {"type": "string"},
                "plan_contact": {"type": "string"},
                "network": {"type": "array", "items": {"$ref": "#/definitions/network"}},
                "formulary": {"type": "array", "items": {"$ref": "#/definitions/formulary"}},
                "last_updated_on": {"type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"}
            },
            "required": ["plan_id_type", "plan_id", "marketing_name", "summary_url", "plan_contact", "network", "formulary"]
        },
        "network": {
            "type": "object",
            "properties": {
                "network_tier": {"type": "string", "pattern": "^[A-Z-]+$"}
            },
            "required": ["network_tier"]
        },
        "formulary": {
            "type": "object",
            "properties": {
                "drug_tier": {"type": "string"},
                "mail_order": {"type": "boolean"},
                "cost_sharing": {"type": "array", "items": {"$ref": "#/definitions/cost_sharing"}}
            },
            "required": ["drug_tier", "mail_order"]
        },
        "cost_sharing": {
            "type": "object",
            "properties": {
                "pharmacy_type": {"type": "string"},
                "copay_amount": {"type": "number"},
                "copay_opt": {"type": ["string", "null"]},
                "coinsurance_rate": {"type": "number", "minimum": 0, "maximum": 100},
                "coinsurance_opt": {"type": ["string", "null"]}
            },
            "required": ["pharmacy_type", "copay_amount", "coinsurance_rate"]
        }
    }
}
